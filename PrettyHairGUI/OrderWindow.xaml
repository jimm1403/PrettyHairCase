<Window x:Class="PrettyHairGUI.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrettyHairGUI"
        mc:Ignorable="d"
        Title="NICEHAIR ORDER" Height="245" Width="391" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#00ecff" Offset="0"/>
                <GradientStop Color="#FF990000" Offset="0.312"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Horizontal" Height="215" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <DataGrid x:Name="orderDataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="195" Width="363" Background="#FF990000" BorderBrush="White" Foreground="#FFCF3F3F"/>
        </StackPanel>
    </Grid>
</Window>
